@page
@model MercadoIgnis.Pages.Calificaciones.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Edit</h1>

<h4>Calificacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Calificacion.ID" />
            <div class="form-group">
                <label asp-for="Calificacion.Nota" class="control-label"></label>
                <input asp-for="Calificacion.Nota" class="form-control" />
                <span asp-validation-for="Calificacion.Nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion.Descripcion" class="control-label"></label>
                <input asp-for="Calificacion.Descripcion" class="form-control" />
                <span asp-validation-for="Calificacion.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
