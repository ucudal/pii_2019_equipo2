@page
@model MercadoIgnis.Pages.Puestos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Puestos a Proyectos Ignis</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Puesto[0].ProyectoIgnis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puesto[1].Especialidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Puesto) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProyectoIgnis.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Especialidad.Nivel)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
