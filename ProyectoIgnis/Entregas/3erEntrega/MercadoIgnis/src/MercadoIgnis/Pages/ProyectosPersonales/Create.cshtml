@page
@model MercadoIgnis.Pages.ProyectosPersonales.CreateModel

@{
    ViewData["Title"] = "Crear Nuevo";
}

<h1>Crear Nuevo</h1>

<h4>ProyectoPersonal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProyectoPersonal.Descripcion" class="control-label"></label>
                <input asp-for="ProyectoPersonal.Descripcion" class="form-control" />
                <span asp-validation-for="ProyectoPersonal.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProyectoPersonal.FechaComienzo" class="control-label"></label>
                <input asp-for="ProyectoPersonal.FechaComienzo" class="form-control" />
                <span asp-validation-for="ProyectoPersonal.FechaComienzo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProyectoPersonal.FechaFinalizacion" class="control-label"></label>
                <input asp-for="ProyectoPersonal.FechaFinalizacion" class="form-control" />
                <span asp-validation-for="ProyectoPersonal.FechaFinalizacion" class="text-danger"></span>
            </div>
            <div class = "form-group">
                <label asp-for="ProyectoPersonal.Tipos"></label>
                <select asp-for="ProyectoPersonal.Tipos" asp-items="Model.ProyectosTipos"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
