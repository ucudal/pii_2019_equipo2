@page
@model MercadoIgnis.Pages.ProyectosIgnis.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Proyectos Ignis</h1>

<p>
    <a asp-page="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProyectoIgnis[0].Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProyectoIgnis[0].FechaComienzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProyectoIgnis[0].FechaFinalizacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProyectoIgnis[0].Estado)
            </th>
            <th>
               Propietario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ListaProyectosConNombreCliente) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Proyecto.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proyecto.FechaComienzo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proyecto.FechaFinalizacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Proyecto.Estado)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.NombrePropietario)
               
            </td>
            <td>
                <a asp-page="../Puestos/Create" asp-route-id="@item.Proyecto.ID">Agregar Puesto</a> |
                <a asp-page="./Edit" asp-route-id="@item.Proyecto.ID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Proyecto.ID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.Proyecto.ID">Borrar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
