@model MercadoIgnis.Areas.Identity.Pages.MercadoIgnisUsers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Usuarios</h1>

<p>
    <a asp-page="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MercadoIgnisUser[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MercadoIgnisUser[0].DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MercadoIgnisUser[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MercadoIgnisUser[0].EmailConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MercadoIgnisUser[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MercadoIgnisUser[0].AccessFailedCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MercadoIgnisUser) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccessFailedCount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
